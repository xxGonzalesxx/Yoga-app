<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/card_background">

        <!-- Изображение позы -->
        <ImageView
            android:id="@+id/poseImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:background="@drawable/image_frame" />

        <!-- Текст -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/poseName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Поза Горы"
                android:textColor="#2E7D32"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sanskritName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Тадасана"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/poseDifficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/difficulty_badge"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:text="Начальный"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>